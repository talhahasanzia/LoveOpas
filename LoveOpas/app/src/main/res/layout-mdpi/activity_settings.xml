<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acidbricks.projects.loveopas.Settings">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"


        />
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppToolbar"

        android:layout_alignParentTop="true"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:id="@+id/frameFragment"

        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <EditText
                android:layout_width="60dp"
                android:background="@drawable/rounded_corner"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:paddingLeft="3dp"
                android:textAlignment="center"

                android:text="mm"
                android:textColor="@color/textForeground"
                android:id="@+id/monthText"

                android:width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginTop="43dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date of Birth:"
                android:id="@+id/textView2"
                android:layout_above="@+id/monthText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ce0948" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="/"
                android:textSize="40sp"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/monthText"
                android:layout_toRightOf="@+id/monthText"
                android:layout_toEndOf="@+id/monthText"
                android:textColor="#ce0948" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:paddingLeft="3dp"
                android:textAlignment="center"
                android:text="dd"
                android:textColor="@color/textForeground"

                android:background="@drawable/rounded_corner"
                android:id="@+id/dayText"
                android:width="40dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="/"
                android:textSize="40sp"
                android:id="@+id/textView4"
                android:layout_alignBottom="@+id/dayText"
                android:layout_toRightOf="@+id/dayText"
                android:layout_toEndOf="@+id/dayText"
                android:textColor="#ce0948" />

            <EditText
                android:layout_width="105dp"
                android:background="@drawable/rounded_corner"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:textAlignment="center"
                android:text="yyyy"
                android:textColor="@color/textForeground"
                android:paddingLeft="3dp"
                android:id="@+id/yearText"
                android:width="40dp"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Star Select:"
                android:textSize="22sp"
                android:id="@+id/textView5"
                android:textColor="#ce0948"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="22dp" />

            <EditText
                android:layout_width="210dp"
                android:background="@drawable/rounded_corner"
                android:layout_height="40dp"

                android:ems="10"
                android:textAlignment="center"
                android:text="Enter your star"

                android:textColor="@color/textForeground"
                android:paddingLeft="6dp"
                android:id="@+id/starText"
                android:width="140dp"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/monthText"
                android:layout_alignStart="@+id/monthText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notifications:"
                android:textSize="22sp"
                android:id="@+id/textView6"
                android:textColor="#ce0948"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/starText"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:id="@+id/notifySwitch"

                android:layout_below="@+id/textView6"
                android:layout_alignRight="@+id/yearText"
                android:layout_alignEnd="@+id/yearText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date of birth:"
                android:textSize="22sp"
                android:id="@+id/textView9"
                android:textColor="#ce0948"
                android:layout_above="@+id/dayText"
                android:layout_alignLeft="@+id/monthText"
                android:layout_alignStart="@+id/monthText" />


        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>
